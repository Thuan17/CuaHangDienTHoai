@model CuaHangBanDienThoai.Models.Customer
<div class="custom-fieldset">
    <div class="custom-legend">Thông tin khách hàng</div>
    @if (Model != null)
    {
        <div class="col-12 customer-details p-3 rounded">
            <p class="m-0 customer-name"><strong>Tên:</strong> @Model.CustomerName.Trim()</p>
            <p class="m-0 customer-phone"><strong>SĐT:</strong> @Model.PhoneNumber.Trim()</p>
        </div>
        <button type="button" class="btn btn-success d-flex align-items-center justify-content-center w-100 mt-3 checkOut" data-customerid="@Model.CustomerId" style="height: 40px;">
            <img src="~/images/gif/Spinnerloading.gif" class="loading-image " style="width: 45px; height: 45px; display: none; " />

            <span class="button-text ">Bán hàng</span>
        </button>
    }
    else
    {
        <div class="col-12 customer-details p-3 rounded">
            <p class="m-0 customer-name text-danger" >Không tìm thấy khách hàng @( ViewBag.txt??"") </p>

        </div>
        <button type="button" class="btn btn-warning align-items-center text-center mt-2  w-100 btnAddCusstomer">Tạo thông tin khách hàng</button>
    }

</div>