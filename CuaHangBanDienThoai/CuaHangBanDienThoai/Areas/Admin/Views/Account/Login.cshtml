
@{
    ViewBag.Title = "Hệ thống nhân viên";
    Layout = null;
}
<link href="~/Content/css/admin/login/css/style.css" rel="stylesheet" />

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="icon" href="~/images/logo/logo2.png" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    .custom-background {
        background-color: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
        padding: 20px;
        border-radius: 25px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: white;
        border: none;
    }
</style>

<body class="img js-fullheight" style="background-image: url(Content/css/admin/login/images/bg.jpg);">
    <div class="notifications">
        <div>
            @*<div class="toastNotifi success">
                    <i class="fa-solid fa-check"></i>
                    <div class="content">
                        <div class="title">Thành công</div>
                        <span>Không tìm thấy chức năng của tài khoản</span>
                    </div>
                    <i class="close fa-solid fa-xmark"
                       onclick="(this.parentElement).remove()"></i>
                </div>*@
        </div>
    </div>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4  rounded custom-background">
                    <div class="login-wrap p-0 m-3">
                        <h5 class="heading-section text-center "> <span class="text-danger">PADA</span> Store</h5>
                        <h3 class="mb-4 text-uppercase ">HỆ THỐNG NHÂN VIÊN</h3>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @*@Html.TextBoxFor(m => m.Code, "", new { @class = "form-control", @placeholder = "Nhập mã số nhân viên", style = "border: none;" })*@
                                <input type="text" class="form-control" name="Code" placeholder="Mã nhân viên" required>
                            </div>
                            <div class="form-group">
                                @*@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", id = "password-field", required = "required", type = "password" })*@



                                <input id="password-field" type="password" class="form-control" name="password" placeholder="Mật khẩu" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-black submit px-3 text-white" style="background-color:black">Đăng nhập</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <!-- <label class="checkbox-wrap checkbox-primary">Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label> -->
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Quên mật khẩu ?</a>
                                </div>
                            </div>

                        }

                        <p class="w-100 text-center">&mdash; <span class="text-danger">PADA</span> Store &mdash;</p>
                        <div class="social d-flex text-center">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/admin/js/Admin_Login.js"></script>
</body>

