@* Partial View: Partail_StatisDay.cshtml *@

<div class="chart">
    <canvas id="chart-line" height="300"></canvas>
</div>

<script>
    function updateChart(month) {
        fetch(`/Admin/Statistical/GetStatisticalByOrderDaySelect?month=${month}`)
            .then(response => response.json())
            .then(data => {
                new Chart(document.getElementById('chart-line').getContext('2d'), {
                    type: 'line',
                    data: {
                        labels: data.Labels,
                        datasets: [
                            {
                                label: "Đơn huỷ",
                                tension: 0.4,
                                borderWidth: 2,
                                borderColor: "#ff4c4c",
                                backgroundColor: "transparent",
                                data: data.DonHuyData,
                                pointRadius: 3
                            },
                            {
                                label: "Đơn hoàn thành",
                                tension: 0.4,
                                borderWidth: 2,
                                borderColor: "#4caf50",
                                backgroundColor: "transparent",
                                data: data.DonHoanThanhData,
                                pointRadius: 3
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: true
                            },
                            tooltip: {
                                enabled: true,
                                mode: 'index',
                                intersect: false
                            }
                        },
                        scales: {
                            y: {
                                grid: {
                                    borderDash: [2],
                                    borderDashOffset: [2],
                                    color: '#dee2e6',
                                    zeroLineColor: '#dee2e6',
                                    zeroLineWidth: 1
                                },
                                ticks: {
                                    beginAtZero: true,
                                    padding: 10,
                                    font: {
                                        size: 11,
                                        family: 'Public Sans',
                                        color: '#adb5bd'
                                    }
                                }
                            },
                            x: {
                                grid: {
                                    zeroLineColor: 'rgba(0,0,0,0)',
                                    display: false
                                },
                                ticks: {
                                    padding: 10,
                                    font: {
                                        size: 11,
                                        family: 'Public Sans',
                                        color: '#adb5bd'
                                    }
                                }
                            }
                        }
                    }
                });
            });
    }
    $(document).ready(function () {
             var month = '@ViewBag.SelectedMonth';
     updateChart(month);
    });




</script>
