@model IEnumerable<CuaHangBanDienThoai.Models.Review>

<h4 class="comments-title">
    Đánh giá @(ViewBag.Name?.Trim() ?? "Sản phẩm không xác định") (@(ViewBag.Count != null && ViewBag.Count > 0 ? ViewBag.Count.ToString() : "0"))

</h4>
<div class="be-comment-body">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            int star = Math.Min(item.Ratingscore, 5);
            <div class="be-comment" id="comment_@item.ReviewId">
                <div class="be-img-comment">
                    <a href="blog-detail-2.html">
                        <img src="@(item.Customer.Image ?? "/images/logo/logoweb.png")" alt="" class="be-ava-comment">
                    </a>
                </div>
                <div class="be-comment-content">
                    <div class="be-comment-header d-flex justify-content-between align-items-center">
                        <span class="be-comment-name w-100">
                            <div class="d-flex p-0 m-0">
                                <a href="/#">@item.Customer.CustomerName.Trim()</a>

                          


                                <button class="btn border-0  mt-0 p-0 mr-1 
                                        @(((ViewBag.IsAdmin != null&&(bool)ViewBag.IsAdmin) ||(ViewBag.IsManage != null&&(bool)ViewBag.IsManage)) ? "btnDeleteReview" : "hide")"
                                        data-productid="@item.ProductId"
                                  
                                        data-reviewid="@item.ReviewId"
                                        style="width:17px">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="red" width="14" height="14"  viewBox="0 0 448 512">
                                    <path d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z" /></svg>
                                </button>
                            </div>

                            <ul class="d-flex star pl-0 mb-0">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <li class="p-1 pt-0 pb-0">
                                        @if (i < star)
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" class="bi bi-star-fill" style="fill: rgb(255, 140, 0)" viewBox="0 0 16 16">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                            </svg>
                                        }
                                        else
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" class="bi bi-star-fill" style="fill: #d3d3d3" viewBox="0 0 16 16">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                            </svg>
                                        }
                                    </li>
                                }
                            </ul>

                        </span>
                        <span class="be-comment-time">
                            <i class="fa fa-clock-o"></i>
                            @item.CreatedDate.ToString("dd/MM/yyyy")
                        </span>
                    </div>
                    <p class="be-comment-text">
                        @item.Content.Trim()
                    </p>
                </div>

            </div>

        }
    }
    else
    {

        <div class="be-comment">
            <div class="be-img-comment">
                <a href="blog-detail-2.html">
                    <img src="~/images/logo/logoweb.png" alt="" class="be-ava-comment">
                </a>
            </div>
            <div class="be-comment-content">

                <span class="be-comment-name">
                    <a href="/trang-chu" class="d-flex">
                        <span style="all: unset !important; color: red !important; font-size: 16px; font-family: 'Conv_helveticaneuecyr-bold';"
                              class="text-danger p-0 m-0">Pada</span>MiniStore
                    </a>
                </span>
                <span class="be-comment-time">
                    <i class="fa fa-clock-o"></i>
                    @String.Format("{0:dd/MM/yyyy}", ViewBag.Date)
                </span>

                <p class="be-comment-text">
                    Không có đánh giá nào 
                </p>
            </div>
        </div>
    }
</div>
