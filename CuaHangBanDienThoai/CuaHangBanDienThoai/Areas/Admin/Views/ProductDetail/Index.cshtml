@{
    ViewBag.Title = "Quản lý chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    p {
        color: black !important;
        white-space: nowrap !important; /* Không cho chữ xuống dòng */
