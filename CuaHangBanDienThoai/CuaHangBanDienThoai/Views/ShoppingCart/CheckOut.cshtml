@model CuaHangBanDienThoai.Models.ShoppingCart
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

}

<link href="~/Content/css/Cart/css/bootstrap/main.css" rel="stylesheet" />
<link href="~/Content/css/Cart/css/bootstrap/util.css" rel="stylesheet" />
<link href="~/Content/css/Cart/css/bootstrap/owl.carousel.min.css" rel="stylesheet" />
<link href="~/Content/css/client/CheckOut.css" rel="stylesheet" />

<link href="~/Content/css/Notification.css" rel="stylesheet" />

<div class="bg-sg2" style="display: none ">

</div>

<div id="popupBill2" style="display: none">
    <div class="card w-100 p-0 m-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="card-title">
                <h5>Thay đổi địa chỉ mặc định</h5>
            </div>
            <div class="card-tools">
                <button class="btn btnCloseEditBill" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" style="color:red" width="16" height="16" fill="currentColor" class="bi bi-x-octagon-fill" viewBox="0 0 16 16">
                        <path d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353zm-6.106 4.5L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708" />
                    </svg>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div id="loadDataBillEdit">
                <div class="text-center">
                    <img src="~/Content/ckfinder/ckfinder/plugins/gallery/colorbox/images/loading.gif" alt="Loading..." />
                </div>
               
            </div>
        </div>
    </div>
</div>




<div class="container container_Index bg-white">
    <ul class="breadcrumbs mb-1 pl-0 pt-2 d-flex align-items-center ">
        <li class="breadcrumb-item m-0 p-0"><a href="/trang-chu">Cửa hàng</a></li>
        <li class="breadcrumb-item m-0 p-0"> <a href="/gio-hang">Giỏ Hàng</a></li>
        <li class="breadcrumb-item active"> Đặt hàng</li>

    </ul>
    <div class="row">
        <div class="mt-2"><h5 class="text-uppercase">Đơn hàng của bạn</h5></div>
        @if (ViewBag.CheckCart != null)
        {<div class="   pl-0 pr-0 mt-2">
                <div class="main align-items-center p-0 CheckOutGr border-0">
                    <div class="CheckOutImg" style="border:none!important">
                        <b class="text-black ml-3 mb-0">Hình </b>
                    </div>

                    <div class="CheckOutGrContent">
                        <b class="text-black  pl-1 mb-0" style="border:none!important">Sản phẩm</b>
                    </div>
                </div>
            </div>

            <div class=" cart ItemCheckOut" style="padding:0 !important ; ">
                @Html.Action("Partial_Item_ThanhToan", "ShoppingCart")
            </div>

            <div class="col-12 border-bottom border-dark"></div>
            <div class="CustomerCheckOut"id="CustomerCheckOut">
                @Html.Action("Partial_ThongTinKhachHang", "ShoppingCart")
            </div>
        }
        else
        {
            <div class="col-12 cart">
                <div class="cart_null">

                    <img src="~/images/logo/CartNull.png" class="text-center img_CarNUll" alt="Không có sản phẩm nào trong giỏ hàng của bạn">
                </div>
                <div class="back-to-shop"><a href="/trang-chu">&leftarrow;<span class="text-muted">Về cửa hàng</span></a></div>
            </div>
        }
    </div>
</div>
<script src="~/Scripts/CheckOut.js"></script>

