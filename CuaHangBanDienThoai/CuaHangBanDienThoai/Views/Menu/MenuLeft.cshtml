@model IEnumerable<CuaHangBanDienThoai.Models.ProductCategory>

<ul class="sidebar_categories">
    <li><a href="/cua-hang">Tất cả</a></li>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            if (ViewBag.ALias == item.Alias)
            {
                <li class="active">
                    <a href="/loai-san-pham/@item.Alias">
                        <span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a href="/loai-san-pham/@item.Alias">
                        @item.Title
                    </a>
                </li>
            }
        }
    }
    else
    {
        <li><a href="#">Chưa có dữ liệu</a></li>
    }
</ul>
