@model CuaHangBanDienThoai.Models.Client_UpdateProFile
<link href="~/Content/css/login/css/style.css" rel="stylesheet" />
<style>
    .form-control-placeholder {
        color: #888 !important; /* Thay đổi màu cho label, màu nhạt */
    }

    /* Đổi màu chữ khi người dùng nhập vào */
    .input-field {
        color: #333 !important; /* Màu chữ khi nhập */
    }

    /* Thêm kiểu ưu tiên cho các trường nhập liệu */
    input:focus,
    textarea:focus {
        border-color: #007bff !important; /* Màu viền khi focus vào trường nhập */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5) !important; /* Thêm hiệu ứng ánh sáng xung quanh */
    }

        /* Đảm bảo nhãn không bị mờ khi nhập */
        input:focus + label,
        textarea:focus + label {
            color: #000000 !important; /* Màu label khi trường được focus */
        }
    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="datetime-local"] {
        color: #000 !important; /* Màu đen cho nội dung */
    }

</style>
@if (Model != null)
{
    <div class=" mainLogin p-0 m-0 w-100">
        <div class="row p-0 m-0 w-100 justify-content-center">
            <div class="col-12 p-0 m-0 w-100 ">
                <div class="wrap">
                   
                    <div class="login-wrap">
                        <div class="d-flex algin-item-center text-center">
                            <div class="w-100">
                                <h3 class="mb-4 text-white">Đăng ký tài khoản</h3>
                            </div>
                        </div>
                        <form id="registerForm" enctype="multipart/form-data" class="signin-form">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(x=>x.CustomerId)

                            <div class="row m-0 p-0 w-100">
                                <div class="col-lg-6">
                                    <div class="form-group mt-3">
                                        <input type="text" class="form-control input-field" value="@Model.PhoneNumber" name="PhoneNumber" id="phone" required>
                                        <label for="userInput" class="form-control-placeholder">Số điện thoại </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mt-3">
                                        <input type="text" class="form-control input-field"value="@Model.Email"  name="Email" id="Email" required>
                                        <label for="userInput" class="form-control-placeholder">Email</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-0 p-0 w-100">
                                <div class="col-lg-12">
                                    <div class="form-group mt-5">
                                        <input type="text" class="form-control input-field"value="@Model.CustomerName"  name="CustomerName" id="fullName" required>
                                        <label for="fullName" class="form-control-placeholder">Họ và tên</label>
                                    </div>
                                </div>

                            </div>
                            <div class="row m-0 p-0 w-100">
                                <div class="col-12">
                                    <div class="form-group mt-5">
                                        <input id="password-field" type="password" name="password" class="form-control input-field" required>
                                        <label for="password" class="form-control-placeholder">Mật khẩu</label>
                                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                    </div>
                                </div>
                               
                            </div>
                            <div class="row m-0 p-0 w-100">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="Birthday">Ngày sinh</label>
                                        <input type="datetime-local" name="Birthday"
                                               value="@(Model.Birthday.HasValue ? Model.Birthday.Value.ToString("yyyy-MM-ddTHH:mm") : "")"
                                               id="Birthday" required
                                               class="form-control"
                                               autocomplete="off" />

                                        @Html.ValidationMessageFor(x => x.Birthday, null, new { @class = "text-danger" })
                                    </div>

                                </div>

                            </div>

                            <div class="form-group">

                                <button type="button" class="form-control btn btn-primary rounded submit px-3" onclick="if(validateForm()) $('#registerForm').submit();">  Cập nhập</button>
                            </div>

                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
}
