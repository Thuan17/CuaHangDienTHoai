
@{
    ViewBag.Title = "Đang nhập tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/css/login/js/main.js"></script>
<link href="~/Content/css/login/css/style.css" rel="stylesheet" />
<div class="container pt-3">

    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="wrap">
                <div class="img" style="background-image: url(/images/logo/logoweb.png);"></div>
                <div class="login-wrap p-4 p-md-5">
                    <div class="d-flex">
                        <div class="w-100">
                            <h3 class="mb-4">Đăng nhập  </h3>
                        </div>
                        <div class="w-100">
                            <p class="social-media d-flex justify-content-end">
                                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                            </p>
                        </div>
                    </div>
                    <form action="#" class="signin-form">
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" required>
                            <label class="form-control-placeholder" for="username">Số điện thoại hoặc email</label>
                        </div>
                        <div class="form-group">
                            <input id="password-field" type="password" class="form-control" required>
                            <label class="form-control-placeholder" for="password">Mật khẩu</label>
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                        </div>
                        <div class="form-group d-md-flex">
                            <div class="w-100 text-left">
                                <a href="#">Bạn không nhớ mật khẩu ?</a>
                            </div>
                            @*<div class="w-50 text-md-right">
                                <a href="#">Bạn không nhớ mật khẩu ?</a>
                            </div>*@
                        </div>
                    </form>
                    <p class="text-center">Bạn chưa có tài khoản ?  <a data-toggle="tab" href="/dang-ky">Đăng ký </a></p>
                </div>
            </div>
        </div>
    </div>
</div>  
